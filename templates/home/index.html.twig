{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div>
{% for blog in blogs %}
    <div class="card">
    <div class="card-header">un article Ã©crit par {{blog.author}}</div>
      <div class="card-body">
        <h5 class="card-title">{{blog.title}}</h5>
         <p class="card-text">{{blog.content|length > 30 ? blog.content|slice(0, 30) ~ '...' :blog.content}}</p>
      </div>
      <a href="{{ path('blog_show', {'id': blog.id}) }}" class="btn btn-outline-secondary mr-3 mt-4">Voir le blog</a>
    </div>
    <div>
    {% for category in blog.categories %}
    {% if loop.first %}
    <div>{{category.name}} </div>
    {% endif %}
    {% endfor %}
    </div>
{% endfor %}
</div>
{% endblock %}
